<?xml version="1.0" encoding="utf-8"?>
<odoo>

    


    <record id="library_order_line_tree_view" model="ir.ui.view">
        <field name="name">view.library.order_line.tree</field>
        <field name="model">library.order_line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="book_id" />
                <field name="unit_price"/>
                <field name="qte"/>
                <field name="total_price"   />
            </tree>

        </field>
    </record>

    <record id="library_order_line_form_view" model="ir.ui.view">
        <field name="name">view.library.order_line.form</field>
        <field name="model">library.order_line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="book_id" options="{'no_create':True,'no_open':True}"/>
                    <field name="unit_price"/>
                    <field name="qte"/>
                    <field name="total_price"   />
                </group>
            </form>

        </field>
    </record>


   


</odoo>